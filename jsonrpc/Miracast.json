{
  "$schema": "interface.schema.json",
  "jsonrpc": "2.0",
  "info": {
    "title": "Miracast API",
    "class": "MiracastJSONRPC",
    "description": "Miracast JSON-RPC interface"
  },
  "common": {
    "$ref": "common.json"
  },
  "include": {
    "statecontrol": {
      "$ref": "StateControl.json#"
    }
  },
  "properties": {
    "visibility": {
      "summary": "Current Miracast visibility",
      "writeonly":true,
      "events": [
        "visibilitychange"
      ],
      "params": {
        "type": "string",
        "enum": [
          "visible",
          "hidden"
        ]
      }
    }
  },
  "methods": {
    "startapp": {
      "summary": "Start miracast application",
      "params": {
        "type": "object",
        "properties": {
          "command": {
            "description": "Command to send to Miracast",
            "type": "string",
            "example": "config"
          }
        }
      },
      "result": {
        "type": "number"
      },
      "errors": [
        {
          "description": "Miracast is unavailable",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Command is not set",
          "$ref": "#/common/errors/unknownkey"
        }
      ]
    },
    "stopapp": {
      "summary": "Stop miracast application",
      "params": {
        "type": "object",
        "properties": {
          "command": {
            "description": "Command to send to Miracast",
            "type": "string",
            "example": "config"
          }
        }
      },
      "result": {
        "type": "number"
      },
      "errors": [
        {
          "description": "Miracast is unavailable",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Command is not set",
          "$ref": "#/common/errors/unknownkey"
        }
      ]
    },
    "factoryreset": {
      "summary": "Does Miracast factory reset",
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Miracast is unavailable",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "systemcommand": {
      "summary": "Does Miracast app specific system command",
      "params": {
        "type": "object",
        "properties": {
          "command": {
            "description": "Command to send to miracast",
            "type": "string",
            "example": "config"
          }
        }
      },
      "result": {
        "type": "number"
      },
      "errors": [
        {
          "description": "Miracast is unavailable",
          "$ref": "#/common/errors/unavailable"
        },
        {
          "description": "Command is not set",
          "$ref": "#/common/errors/unknownkey"
        }
      ]
    }
  },
  "events": {
    "visibilitychange": {
      "summary": "Signals a visibility change of the Miracast",
      "params": {
        "type": "object",
        "properties": {
          "hidden": {
            "description": "Determines if the Miracast has been hidden (true) or made visible (false)",
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  }
}
